/* components/PopPicker/index.wxss */
.global-cell {
    padding: 20rpx 0 20rpx 32rpx;
}

.cell-title-placeholder {
    color: rgba(120, 120, 120, 0.4);
}

.cell-title-readonly {
    color: #666666;
    font-size: 32rpx;
}
.model-wrapper {
    position: relative;
}
.model-wrapper .icon-close {
    position: absolute;
    right: 60rpx;
    top: 50%;
    transform: translateY(-50%);
    z-index: 100;
    width: 40rpx;
    height: 40rpx;
    text-align: center;
}

.my-picker-popup .pop-header {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-bottom: 1rpx solid #ddd;
}
.my-picker-popup .pop-header .my-picker-close-icon {
    position: absolute;
    right: 20rpx;
    cursor: pointer;
}
.my-picker .van-picker__toolbar {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.my-picker .van-picker__toolbar .van-picker__cancel,.my-picker .van-picker__toolbar .van-picker__confirm {
    width: 35%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
}

.my-picker .van-picker__toolbar .van-picker__cancel {
    border-radius: 35rpx 0 0 35rpx;
    background-color: #c1c1c1;
    color: #222;
}
.my-picker .van-picker__toolbar .van-picker__confirm {
    border-radius: 0 35rpx 35rpx 0;
    background-color: #3297fa;
    color: #fff;
}