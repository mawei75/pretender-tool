/* pages/photo/index.wxss */
.photo-container {
	width: 100vw;
	height: 100vh;
	background-color: #7dc5ef;
	padding: 40rpx 60rpx;
}
.img-wrapper {
	width: 100%;
	height: 1000rpx;
	border-radius: 12rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: rgba(169, 209, 235, 0.671);
	position: relative;
}
.crop-wrapper {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	flex-wrap: wrap;
}
.crop-unit {
	width: calc(100% / 3);
	border-top: 1rpx solid #fff;
	border-right: 1rpx solid #fff;
}
.crop-unit:nth-child(3n + 1) {
	border-left: 1rpx solid #fff;
}
.crop-unit:nth-last-of-type(3) {
	border-bottom: 1rpx solid #fff;
}
.crop-unit:nth-last-of-type(2) {
	border-bottom: 1rpx solid #fff;
}
.crop-unit:nth-last-of-type(1) {
	border-bottom: 1rpx solid #fff;
}
.preview {
	width: 100%;
	height: 100%;
	background-position: 0 0, 10rpx 10rpx;
	background-size: 20rpx 20rpx;
	background-image: linear-gradient(45deg, #cccccc40, #cccccc40),
	linear-gradient(45deg,#eee 25%,transparent 0,transparent 75%,#eee 0,#eee),
	linear-gradient(45deg, #eee 25%, #fff 0, #fff 75%, #eee 0, #eee);
}
.preview .pic {
	max-height: calc(100% - 120rpx);
}
.tools {
	margin-top: 20rpx;
}
.upload-btn {
	width: 400rpx;
	height: 80rpx;
	margin: 0 auto 0;
	border-radius: 12rpx;
	font-size: 32rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: rgb(3, 55, 151);
	color: #fff;
	box-shadow: 5rpx 2rpx 5rpx rgb(57, 119, 212);
}

.btn:active {
	background-color: rgb(2, 43, 121);
}